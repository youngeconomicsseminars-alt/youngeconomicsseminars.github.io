```{r, echo=FALSE, message=FALSE, warning=FALSE}
library(readr)
library(dplyr)
library(lubridate)
library(knitr)

events <- read_csv("events.csv", show_col_types = FALSE)

make_link <- function(x, label) {
  ifelse(is.na(x) | x == "", "", paste0("[", label, "](", x, ")"))
}

events <- events %>%
  mutate(
    Details = make_link(Talk, "Details"),
  ) %>%
  select(`Event Date`, Title, Speaker, Affiliation, Details)

#kable(events, escape = FALSE)

today <- Sys.Date()

upcoming <- events %>%
  filter(`Event Date` >= today) %>%
  arrange(`Event Date`)

past <- events %>%
  filter(`Event Date` <= today) %>% 
  arrange(desc(`Event Date`))

kable(upcoming, align = "l", caption = "Upcoming Seminars")

kable(past, align = "l", caption = "Past Seminars")
```

